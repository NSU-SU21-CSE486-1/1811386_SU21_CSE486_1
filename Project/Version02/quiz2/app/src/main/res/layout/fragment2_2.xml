<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <FrameLayout
        android:id="@+id/wrapper2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".fragment2_2">

        <Spinner
            android:id="@+id/spinner1_1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="520dp"
            android:layout_marginBottom="419dp"
            android:entries="@array/array_uninersity" />

        <Spinner
            android:id="@+id/spinner2_1"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="550dp"
            android:layout_marginBottom="375dp"
            android:entries="@array/array_uninersity_department" />

        <EditText
            android:id="@+id/StudentID1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="600dp"
            android:ems="10"
            android:hint="@string/student_id"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/StudentLevel1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="650dp"
            android:ems="10"
            android:hint="@string/study_level"
            android:inputType="textPersonName" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:layout_marginTop="620dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add" />
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="700dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName" />

    </FrameLayout>
</ScrollView>